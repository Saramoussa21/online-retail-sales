# Environment Configuration for Retail Data Platform
# Copy this file to .env and configure with your settings

# ==========================================
# Database Configuration
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ors
DB_USER=postgres
DB_PASSWORD=123456

# Optional database settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# ==========================================
# ETL Configuration
# ==========================================
ETL_BATCH_SIZE=1000
ETL_MAX_RETRIES=3
ETL_RETRY_DELAY=5
ETL_CHUNK_SIZE=5000
ETL_ENABLE_PARALLEL=false

# ==========================================
# Monitoring Configuration
# ==========================================
MONITORING_QUALITY_THRESHOLD=0.95
MONITORING_RETENTION_DAYS=30
MONITORING_ENABLE_ALERTS=true

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/retail_platform.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ==========================================
# Performance Configuration
# ==========================================
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
ENABLE_QUERY_CACHE=true

# ==========================================
# Application Configuration
# ==========================================
CONFIG_ENV=development
APP_NAME=retail_data_platform
APP_VERSION=1.0.0

# ==========================================
# Optional: Email Notifications
# ==========================================
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# ALERT_RECIPIENTS=admin@yourcompany.com